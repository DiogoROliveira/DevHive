<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para o título expandido (em baixo na imagem) -->
    <style name="ExpandedTitleTextAppearance" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <!-- Estilo para o título colapsado (na toolbar normal) -->
    <style name="CollapsedTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Tema escuro para a toolbar para garantir ícones brancos -->
    <style name="ToolbarDarkTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <!-- Estilo para RadioButton customizado -->
    <style name="CustomLanguageRadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="android:textColor">@color/language_radio_text_color_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/language_radio_background</item>
        <item name="android:button">@null</item>
        <item name="android:drawableEnd">@drawable/radio_selector</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>